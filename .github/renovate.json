{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:terraform"
  ],
  "terraform": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions updates",
      "groupSlug": "gha"
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "groupName": "Terraform updates",
      "groupSlug": "tf"
    }
  ],
  "gitAuthor": "Renovate Bot <renovate@quiquecmtt.com>",
  "dependencyDashboard": true
}
